{

"en":

[

{% assign posts = site.categories.blog | where: "language", "english" %}

{% for post in posts limit:4 %}
{
"language": "{{ post.language }}",
"title": "{{ post.title }}",
"splash": "{{post.splash}}",
"date": "{{ post.date | date_to_long_string }}",
"url": "{{ post.url }}",
"author": "{{ post.author }}",
"content": "{{ post.content | strip_html | truncatewords: 30 }}"
}
{% unless forloop.last %},{% endunless %}
{% endfor %}




],

"events":

[

{% assign posts = site.categories.events | where: "category", "event" %}

{% for post in posts limit:2 %}
{
"title": "{{ post.title }}",
"eventdate": "{{post.eventdate}}",
"url": "{{ post.url }}"
}
{% unless forloop.last %},{% endunless %}
{% endfor %}




],

"ara":

[

{% assign posts = site.categories.blog | where: "language", "arabic" %}

{% for post in posts limit:4 %}
{
"language": "{{ post.language }}",
"title": "{{ post.title }}",
"splash": "{{post.splash}}",
"date": "{{ post.date | date_to_long_string }}",
"url": "{{ post.url }}",
"author": "{{ post.author }}",
"content": "{{ post.content | strip_html | truncatewords: 30 }}"
}
{% unless forloop.last %},{% endunless %}
{% endfor %}




]



}


{
"en": [


                {% for post in site.categories.event limit:2 %}

                {% if forloop.last == true %}
                {% assign title = post.title | split:' ' %}
                {% assign date = post.eventdate | date_to_long_string | split:' ' %}


                {
                "title": "{{ post.title }}",
                "eventdate": "{{post.eventdate}}",
                "url": "{{ post.url }}"

                }
                {% else %}
                {% assign title = post.title | split:' ' %}
                {% assign date = post.eventdate | date_to_long_string | split:' ' %}

                {
                "title": "{{ post.title }}",
                "splash": "{{post.splash}}",
                "eventdate": "{{post.eventdate}}",
                "url": "{{ post.url }}"


                },

                {% endif %}
                {% endfor %}


    ]
}


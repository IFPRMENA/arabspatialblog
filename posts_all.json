---
---
{

"en":
[

{% assign posts = site.categories.blog | where: "language", "english" %}

{% for post in posts limit:4 %}
{
"language": "{{ post.language | replace: 'english', 'en' }}",
"title": "{{ post.title }}",
"splash": "{{post.splash}}",
"date": "{{ post.date | date_to_long_string }}",
"url": "{{ post.url }}",
"author": "{{ post.author }}",
"content": "{{ post.content | strip_html | truncatewords: 30 }}"
}
{% unless forloop.last %},{% endunless %}
{% endfor %}
],

"ara":
[

{% assign posts = site.categories.blog | where: "language", "arabic" %}

{% for post in posts limit:4 %}
{
"language": "{{ post.language | replace: 'arabic', 'ara' }}",
"title": "{{ post.title }}",
"splash": "{{post.splash}}",
"date": "{{ post.date | date_to_long_string }}",
"url": "{{ post.url }}",
"author": "{{ post.author }}",
"content": "{{ post.content | strip_html | truncatewords: 30 }}"
}
{% unless forloop.last %},{% endunless %}
{% endfor %}
],

"events":
[

{% assign eventposts = site.categories.event %}

{% for event in eventposts limit:2 %}
{
"title": "{{ event.title }}",
"eventdate": "{{event.eventdate}}",
"url": "{{ event.url }}"
}
{% unless forloop.last %},{% endunless %}
{% endfor %}
]

}

